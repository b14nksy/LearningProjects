else{
userName ? console.log(`${userName} asked, ${userQuestion}`) : console.log(`User asked, ${userQuestion}`);

console.log('\n')
  if (userQuestion) {switch (randomNumber) {
    case 0:
      eightBallAnswer = 'It is certain';
        break;
    case 1: 
      eightBallAnswer = 'It is decidedly so';
        break;
    case 2: 
      eightBallAnswer = 'Reply hazy try again';
        break;
    case 3:
      eightBallAnswer = 'Cannot predict now';
        break;
    case 4: 
